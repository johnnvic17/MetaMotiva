<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/orange"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/goals_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="goals"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="70dp"
        app:layout_constraintStart_toStartOf="@id/view_row"
        app:layout_constraintTop_toTopOf="@id/view_row"
        app:layout_constraintBottom_toBottomOf="@id/view_row"/>

    <ImageView
        android:id="@+id/btn_remove"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_remove_goals"
        android:layout_marginEnd="15dp"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/view_row"
        app:layout_constraintTop_toTopOf="@id/view_row"
        app:layout_constraintBottom_toBottomOf="@id/view_row"/>


</androidx.constraintlayout.widget.ConstraintLayout>